<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
                name="vm"
                type="com.example.app_user.ui.writeReport.WriteReportViewModel"/>
    </data>

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.writeReport.WriteReportActivity">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.08"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@color/colorPrimary"
                android:id="@+id/constraintLayout">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_margin="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textSize="16sp"
                    android:text="제보"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/text_title_apply"/>
        </android.support.constraint.ConstraintLayout>

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintVertical_bias="0.155"
                android:id="@+id/report_image_ic"/>

        <ImageView
                android:id="@+id/ic_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add_black"
                android:onClick="@{()->vm.imageLoad()}"
                app:layout_constraintEnd_toEndOf="@+id/report_image_ic"
                app:layout_constraintStart_toStartOf="@+id/report_image_ic"
                app:layout_constraintBottom_toBottomOf="@+id/report_image_ic"
                app:layout_constraintTop_toTopOf="@+id/report_image_ic"/>

        <EditText
                android:inputType="text"
                android:maxLines="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.06"
                android:background="@drawable/back_write"
                app:layout_constraintTop_toBottomOf="@+id/report_image_ic"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:hint="제목"
                android:text="@={vm.reportTitle}"
                android:textSize="14sp"
                android:padding="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintVertical_bias="0.14"
                android:id="@+id/editText6"/>

        <EditText
                android:inputType="text"
                android:maxLines="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.06"
                android:background="@drawable/back_write"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/editText6"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:hint="강아지 발견 위치"
                android:text="@={vm.reportPlace}"
                android:textSize="14sp"
                android:padding="8dp"
                android:layout_marginEnd="8dp"
                android:id="@+id/editText9"/>

        <EditText
                android:inputType="text"
                android:maxLines="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.25"
                android:background="@drawable/back_write"
                android:layout_marginTop="8dp"
                android:hint="내용"
                android:textSize="14sp"
                android:padding="8dp"
                android:gravity="start"
                app:layout_constraintTop_toBottomOf="@+id/editText9"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:text="@={vm.reportContent}"
                android:id="@+id/editText11"/>

        <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/back_login"
                app:layout_constraintTop_toBottomOf="@+id/editText11"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:text="작성완료"
                android:onClick="@{()->vm.postReport()}"
                android:textColor="@android:color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_percent="0.06"/>
    </android.support.constraint.ConstraintLayout>
</layout>