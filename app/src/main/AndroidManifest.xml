<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.app_user">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".ui.apply_protect.ApplyProtectActivity">
        </activity>
        <activity android:name=".ui.detail_volunteer.DetailVolunteerActivity">
        </activity>
        <activity android:name=".ui.detail_protect.DetailProtectActivity"/>
        <activity android:name=".ui.detail_report.DetailReportActivity"/>
        <activity android:name=".ui.detail_lost.DetailLostActivity">
        </activity>
        <activity android:name=".ui.detail_review.DetailReviewActivity">
        </activity>
        <activity android:name=".ui.apply_adopt.ApplyAdoptActivity">
        </activity>
        <activity android:name=".ui.detail_adopt.DetailAdoptActivity">
        </activity>
        <activity android:name=".ui.signup.SignupActivity">
        </activity>
        <activity android:name=".ui.login.LoginActivity">
        </activity>
        <activity
                android:name=".ui.main.MainActivity"
                android:windowSoftInputMode="adjustResize|adjustPan">
        </activity>
        <activity
                android:name=".ui.SplashActivity"
                android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>